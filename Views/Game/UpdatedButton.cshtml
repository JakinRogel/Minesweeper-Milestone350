@model Minesweeper_Milestone350.Models.Cell



<button class="cell-button @(Model.Visited ? "revealed" : "")" @(Model.Visited ? "disabled" : "") @(Model.flagged ? "flagged" : "")" data-row="@Model.Row
        data-col="@Model.Column">
    <!-- Add content to the button based on cell state -->
    @if (Model.flagged)
    {
        <span class="mine">
            <img src="/image/redflag.png" alt="Alternate Text" />
        </span>
    }
    else if (Model.Visited)
    {
        @if (Model.IsMine)
        {
            <span class="mine">
                <img src="/image/mine 50.png" alt="Alternate Text" />
            </span>
        }
        else
        {
            <span class="number">@Model.LiveNeighbors</span>
        }

    <!-- Display the current timestamp using JavaScript -->
    //<span class="timestamp">@Model.TimeStamp</span>
    }
</button>




