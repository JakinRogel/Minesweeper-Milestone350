@model Minesweeper_Milestone350.Models.Board

@{
    ViewBag.Title = "Game Won";
}

<style>
    .game-over-message {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>

<div class="game-over-message">
    <h2>Congratulations!</h2>
    <p>You have successfully cleared the board!</p>

    <form asp-controller="Game" asp-action="Index" method="get">
        <button type="submit">Play Again</button>
    </form>
</div>
